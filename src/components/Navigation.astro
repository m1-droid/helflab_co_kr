---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { label: '홈', href: '/' },
  { label: '소개', href: '/about' },
  { label: '블로그', href: '/blog' },
  { label: '포트폴리오', href: '/portfolio' },
  { label: '파트너십', href: '/partnership' },
  { label: '연락처', href: '/contact' },
];
---

<nav class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
  <div class="container-max flex items-center justify-between py-4">
    <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent">HELFLAB</a>
    
    <ul class="flex gap-8">
      {navItems.map((item) => (
        <li>
          <a 
            href={item.href}
            class={`font-semibold transition-colors ${
              currentPath === item.href
                ? 'text-blue-600'
                : 'text-gray-700 hover:text-blue-600'
            }`}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
